<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context=".Sobremi">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="50dp"
                android:text="Sobre mi"
                android:textSize="30sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:src="@drawable/santotomas" />

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:src="@drawable/informatica" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="Un poco de mi"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/quiensoy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mi nombre es Felipe Villalobos, vivo en independencia y me meti en la carrera de ingenieria en informatica en el instituto Santo Tomas para poder adquirir conocimientos sobre programacion y robotica, para luego poder ejercer y tener mi propio emprendimiento el cual pueda ser innovador en el mundo de la música"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="30dp"
                android:text="Mis proyectos"
                android:textSize="40dp" />


            <TextView
                android:id="@+id/proyecto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mi emprendimiento es simple, abrir una tienda de musica, pero la gracia está en los instrumentos, al adquirir conocimientos de informatica podré ser capaz de crear guitarras, bajos, baterías, etc, con la capacidad de almacenar sonidos con los cuales puedan usar sin  la necesidad de estar cambiando de amplificacion o pedal, además de hacer lo mismo pero con amplificadores"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="30dp"
                android:text="Mi carrera academica"
                android:textSize="40dp" />

            <TextView
                android:id="@+id/carrera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Durante mi periodo academico nunca he destacado, desde el primer semestre hasta casi este ultimo, siempre he sido salvado por otras personas, he pasado por muchas cosas que me han impedido el concentrarme plenamiento en la carrera que estoy estudiando, pero ahora más que nunca siento la motivacion para poder ser mejor estudiante y haci porder ser el mejor profesional que pueda ser. "
                android:textSize="25sp" />

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:onClick="SalidaOnClick"
                android:text="Salida" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>